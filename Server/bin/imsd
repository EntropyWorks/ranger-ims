set -e
set -u

#
# Handle args
#

opt_nodaemon="";

usage ()
{
    program="$(basename "$0")";

    if [ "${1--}" != "-" ]; then echo "$@"; echo; fi;

    echo "Usage: ${program} [-hX] [-u username] [-g groupname] [-T twistd] [-t type] [-f caldavd.plist] [-p statsfile]";
    echo "Options:";
    echo "        -h Print this help and exit";
    echo "        -X Do not daemonize";

    if [ "${1-}" == "-" ]; then return 0; fi;
    exit 64;
}

while getopts 'hXLu:g:f:T:P:t:p:R:o:' option; do
    case "${option}" in
        '?') usage; ;;
        'h') usage -; exit 0; ;;
        'X') opt_nodaemon="--nodaemon"; ;;
    esac;
done;

shift $((${OPTIND} - 1));

if [ $# != 0 ]; then usage "Unrecognized arguments:" "$@"; fi;

#
# Do The Right THing
#

twistd ${opt_nodaemon} web --class=ims.protocol.Resource;
